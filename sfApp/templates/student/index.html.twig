{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1 class="text-center m-4 text-secondary">STUDENTS</h1>

    <table class="table table-striped table-wide">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.FirstName }}</td>
                <td>{{ student.LastName }}</td>
                <td>{{ student.Email }}</td>
                <td>
                    <a class="btn btn-success m-2" href="{{ path('student_show', {'id': student.id})}}">show</a>
                    <a class="btn btn-warning m-2" href="{{ path('student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary m-2" href="{{ path('student_new') }}">Create new</a>
{% endblock %}
