{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table table-striped table-wide">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ student.FirstName }}</td>
